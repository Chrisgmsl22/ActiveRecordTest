<div id="<%= dom_id pin %>">
  <p>
    <strong>Title:</strong>
    <%= pin.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= pin.description %>
  </p>

  <div>
    <%= pin.body %>
  </div> <br>

  <%# <><%= pin.image_tag(pin.image) %>
  <div>
    <%= link_to image_tag(pin.image_as_thumbnail), pin.image %>
  </div>
  <hr>

  <% pin.pictures.each do |p| %>
    <%= link_to image_tag(p.image), p.image_as_thumbnail %>
  <% end %>

</div>
